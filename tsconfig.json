{
  "compilerOptions": {
    "rootDir": "packages",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "noLib": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "types": [
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages/**/*",
    "./jest.setup.ts",
    "declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/**/*.stories.tsx",
    "packages/**/*.test.tsx"
  ]
}
